<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateCustomer" asp-controller="Home" method="post">
            <fieldset class="form-group">
                <legend>Customer</legend>
                <div class="form-group row">
                    <label for="CustomerID" class="col-md-2 col-form-label">Customer ID:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="CustomerID" name="CustomerID">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="CompanyName" class="col-md-2 col-form-label">Company Name:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="CompanyName" name="CompanyName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ContactName" class="col-md-2 col-form-label">Company Name:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="ContactName" name="ContactName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Address" class="col-md-2 col-form-label">Address:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="Address" name="Address">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="City" class="col-md-2 col-form-label">City:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="City" name="City">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Region" class="col-md-2 col-form-label">Region:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="Region" name="Region">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="PostalCode" class="col-md-2 col-form-label">Postal Code:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="PostalCode" name="PostalCode">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Country" class="col-md-2 col-form-label">Country:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="Country" name="Country">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Phone" class="col-md-2 col-form-label">Phone:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="Phone" name="Phone">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Fax" class="col-md-2 col-form-label">Fax:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="Fax" name="Fax">
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </fieldset>
        </form>
    </div>
</div>