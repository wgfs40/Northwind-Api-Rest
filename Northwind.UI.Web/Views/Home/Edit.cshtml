@model Northwind.UI.Web.Models.CustomerForCreationDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Home" method="post">
            <fieldset class="form-group">
                <legend>Customer</legend>
                <div class="form-group row">
                    <label for="CustomerID" class="col-md-2 col-form-label">Customer ID:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CustomerID,new {@class= "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="CompanyName" class="col-md-2 col-form-label">Company Name:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ContactName" class="col-md-2 col-form-label">Contact Name:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ContactName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Address" class="col-md-2 col-form-label">Address:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="City" class="col-md-2 col-form-label">City:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Region" class="col-md-2 col-form-label">Region:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Region, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group row">
                    <label for="PostalCode" class="col-md-2 col-form-label">Postal Code:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Country" class="col-md-2 col-form-label">Country:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Phone" class="col-md-2 col-form-label">Phone:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })                                                
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Fax" class="col-md-2 col-form-label">Fax:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </fieldset>
        </form>
    </div>
</div>