@model Northwind.IDP.Controllers.UserRegisrtation.PasswordResetViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<h1>Password Reset</h1>
<hr />
@using (Html.BeginForm("PasswordReset", "UserRegistration", FormMethod.Post))
{
    @Html.HiddenFor(x => x.UserId)
    @Html.HiddenFor(x => x.Token)
    <p>New Password: @Html.PasswordFor(x => x.Password)</p>
    <input value="Submit" type="submit" class="btn" />
}